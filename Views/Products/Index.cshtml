@model IEnumerable<Homework3.Models.Product>

@{
    ViewData["Title"] = "Cheapest Products";
}

<h2 class="text-center my-4">Cheapest Products</h2>

<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No products available.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@product.Name</h5>
                            <p class="card-text">
                                <strong>Price:</strong> $@product.Price.ToString("F2")
                            </p>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-info btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>